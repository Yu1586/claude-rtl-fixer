  "keywords": [
    "claude",
    "rtl",
    "hebrew",
    "arabic",
    "electron",
    "patch",
    "bidi",
    "right-to-left",
    "claude-desktop",
    "anthropic"
  ],
  "author": "Yuval Ra (https://www.linkedin.com/in/yuvalra/)",
  "license": "MIT",
  "dependencies": {
    "@electron/asar": "^3.2.0"
