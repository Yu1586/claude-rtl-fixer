{
  "name": "claude-rtl-fixer",
  "version": "1.0.0",
  "description": "Fix RTL (Hebrew, Arabic, etc.) text rendering in Claude Desktop for Windows",
  "main": "src/cli.js",
  "bin": {
    "claude-rtl": "src/cli.js"
  },
  "files": [
    "src/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
